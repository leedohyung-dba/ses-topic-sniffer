; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
char_set = utf-8

[*.{html,css,js,ctp}]
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
